<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F8EEEE"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".dashbord"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
    android:id="@+id/card_view0"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    custom:cardCornerRadius="8dp"
    custom:cardElevation="@dimen/_5sdp"
    custom:cardUseCompatPadding="true"
    custom:cardPreventCornerOverlap="false"
    custom:contentPadding="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/statsview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Waiting for network"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/black"/>


            <TextView
                android:id="@+id/simmod"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:text="Sim Mode: Not config"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/black"/>

            <com.jtv7.rippleswitchlib.RippleSwitch
                android:id="@+id/rippleSwitch"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                app:rs_checked_color="@android:color/holo_red_dark"
                app:rs_unchecked_color="@android:color/darker_gray"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_25sdp"/>


            <Button
                android:id="@+id/setting"
                android:layout_width="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_37sdp"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/ic_settings"/>

            <Button
                android:id="@+id/stopservice"
                android:layout_width="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_65sdp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/ic_stop"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        custom:cardCornerRadius="8dp"
        custom:cardElevation="@dimen/_5sdp"
        custom:cardUseCompatPadding="true"
        custom:cardPreventCornerOverlap="false"
        custom:contentPadding="@dimen/_2sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/_8sdp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/holo_red_dark"
                android:text="Allways Screen ON" />

            <TextView
                android:textSize="@dimen/_8sdp"
                android:id="@+id/lable01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:text="SIM 1 Counte"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_15sdp"></TextView>

            <TextView
                android:textSize="@dimen/_8sdp"
                android:id="@+id/lable02"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Runing Timer"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/_15sdp"></TextView>


            <TextView
                android:textSize="@dimen/_8sdp"
                android:id="@+id/lable03"
                android:textColor="@android:color/holo_red_dark"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIM 2 Counte"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_15sdp"></TextView>

            <RelativeLayout
                android:id="@+id/ly03"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/_95sdp"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_95sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/newround">

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:id="@+id/simonecounter"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/_16sdp"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/ly02"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:background="@drawable/newround">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/_25sdp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:id="@+id/maintimer"/>

            </RelativeLayout>




            <Button
                android:id="@+id/startservice"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/_114sdp"
                android:layout_height="@dimen/_114sdp"
                android:visibility="visible"
                android:background="@drawable/ic_ply">

            </Button>

            <RelativeLayout
                android:id="@+id/ly01"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_95sdp"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_95sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/newround">

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:id="@+id/simtowcounter"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/_16sdp"/>

            </RelativeLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        custom:cardCornerRadius="8dp"
        custom:cardElevation="@dimen/_5sdp"
        custom:cardUseCompatPadding="true"
        custom:cardPreventCornerOverlap="false"
        custom:contentPadding="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/loggcopy"
                android:layout_width="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/ic_portable"
                android:layout_alignParentRight="true"/>

            <Button
                android:id="@+id/clearlog"
                android:layout_width="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/ic_trash"
                android:layout_alignParentRight="true"/>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView"
                android:layout_gravity="left|top" >

                <TextView
                    android:id="@+id/editTextlogcrat"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/_9sdp"
                    android:ems="10"
                    android:text="" />
            </ScrollView>


        </RelativeLayout>




    </androidx.cardview.widget.CardView>
</LinearLayout>




